---
const { name, email, github, linkedin, twitter } = Astro.props;
const currentYear = new Date().getFullYear();
---

<footer class="bg-[var(--secondary-background)] px-6 md:px-12 py-12 relative overflow-hidden" role="contentinfo">
  <div class="absolute inset-0 pointer-events-none overflow-hidden" aria-hidden="true">
    <p class="footer-blur-text absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 text-[28vw] font-[var(--font-heading)] text-[var(--secondary-foreground)] opacity-[0.015] font-bold leading-none whitespace-nowrap">
      CONNECT
    </p>
  </div>

  <div class="absolute top-8 right-12 w-32 h-32 rounded-full border border-[var(--muted)] opacity-10 badge-float" aria-hidden="true"></div>
  <div class="absolute bottom-12 left-16 w-40 h-40 bg-[var(--muted)] opacity-5 rotate-45 shape-rotate" aria-hidden="true"></div>

  <div class="max-w-6xl mx-auto relative z-10">
    <div class="grid md:grid-cols-3 gap-8 mb-8 footer-content">
      <div class="space-y-3">
        <p class="text-2xl font-[var(--font-heading)] text-[var(--secondary-foreground)]">
          {name}
        </p>
        <p class="text-[var(--muted)] text-base leading-relaxed">
          Full Stack Developer passionate about creating elegant solutions and sharing knowledge.
        </p>
      </div>

      <nav class="space-y-3" aria-label="Footer navigation">
        <h2 class="text-lg font-[var(--font-heading)] text-[var(--secondary-foreground)]">
          Quick Links
        </h2>
        <ul class="flex flex-col space-y-1" role="list">
          <li><a href="#home" class="text-[var(--muted)] hover:text-[var(--secondary-foreground)] transition-colors text-base">Home</a></li>
          <li><a href="#about" class="text-[var(--muted)] hover:text-[var(--secondary-foreground)] transition-colors text-base">About</a></li>
          <li><a href="#projects" class="text-[var(--muted)] hover:text-[var(--secondary-foreground)] transition-colors text-base">Projects</a></li>
          <li><a href="#blogs" class="text-[var(--muted)] hover:text-[var(--secondary-foreground)] transition-colors text-base">Blog</a></li>
          <li><a href="#contact" class="text-[var(--muted)] hover:text-[var(--secondary-foreground)] transition-colors text-base">Contact</a></li>
        </ul>
      </nav>

      <nav class="space-y-3" aria-label="Social media links">
        <h2 class="text-lg font-[var(--font-heading)] text-[var(--secondary-foreground)]">
          Connect
        </h2>
        <div class="flex gap-4 footer-social" role="list">
          <a
            href={`https://github.com/${github}`}
            target="_blank"
            rel="noopener noreferrer"
            class="w-10 h-10 border-2 border-[var(--muted)] flex items-center justify-center hover:border-[var(--secondary-foreground)] hover:bg-[var(--secondary-foreground)] text-[var(--muted)] hover:text-[var(--secondary-background)] transition-all shadow-md hover:shadow-xl hover:scale-110"
            aria-label="GitHub"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
            </svg>
          </a>

          <a
            href={linkedin}
            target="_blank"
            rel="noopener noreferrer"
            class="w-10 h-10 border-2 border-[var(--muted)] flex items-center justify-center hover:border-[var(--secondary-foreground)] hover:bg-[var(--secondary-foreground)] text-[var(--muted)] hover:text-[var(--secondary-background)] transition-all shadow-md hover:shadow-xl hover:scale-110"
            aria-label="LinkedIn"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
            </svg>
          </a>

          <a
            href={`https://twitter.com/${twitter}`}
            target="_blank"
            rel="noopener noreferrer"
            class="w-10 h-10 border-2 border-[var(--muted)] flex items-center justify-center hover:border-[var(--secondary-foreground)] hover:bg-[var(--secondary-foreground)] text-[var(--muted)] hover:text-[var(--secondary-background)] transition-all shadow-md hover:shadow-xl hover:scale-110"
            aria-label="Twitter"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
            </svg>
          </a>

          <a
            href={`mailto:${email}`}
            class="w-10 h-10 border-2 border-[var(--muted)] flex items-center justify-center hover:border-[var(--secondary-foreground)] hover:bg-[var(--secondary-foreground)] text-[var(--muted)] hover:text-[var(--secondary-background)] transition-all shadow-md hover:shadow-xl hover:scale-110"
            aria-label="Email"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
          </a>
        </div>
      </div>
    </div>

    <div class="pt-6 border-t border-[var(--muted)] border-opacity-20 footer-bottom">
      <div class="flex flex-col md:flex-row justify-between items-center gap-3">
        <p class="text-[var(--muted)] text-base">
          © {currentYear} {name}. All rights reserved.
        </p>
        <p class="text-[var(--muted)] text-base">
          Designed & Built with <span class="text-[var(--secondary-foreground)]">♥</span> by {name}
        </p>
      </div>
    </div>
  </div>
</footer>

<script>
  import '../scripts/footer';
</script>

<style>
  @keyframes badgeFloat {
    0%, 100% {
      transform: translateY(0) scale(1);
    }
    50% {
      transform: translateY(-20px) scale(1.05);
    }
  }

  @keyframes shapeRotate {
    from {
      transform: rotate(45deg);
    }
    to {
      transform: rotate(405deg);
    }
  }

  .badge-float {
    animation: badgeFloat 10s ease-in-out infinite;
  }

  .shape-rotate {
    animation: shapeRotate 30s linear infinite;
  }
</style>
