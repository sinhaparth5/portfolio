---
const { email, linkedin, twitter } = Astro.props;
---

<section id="contact" class="py-20 md:py-32 bg-[var(--background)] px-6 md:px-12 relative overflow-hidden" aria-labelledby="contact-heading">
  <!-- Huge blur text background -->
  <div class="absolute inset-0 pointer-events-none overflow-hidden" aria-hidden="true">
    <p class="contact-blur-text absolute top-1/4 -right-28 text-[26vw] font-[var(--font-heading)] text-[var(--foreground)] opacity-[0.015] font-bold leading-none whitespace-nowrap">
      CONNECT
    </p>
    <p class="contact-blur-text-2 absolute bottom-1/4 -left-32 text-[22vw] font-[var(--font-heading)] text-[var(--foreground)] opacity-[0.02] font-bold leading-none whitespace-nowrap">
      COLLABORATE
    </p>
  </div>

  <!-- Decorative elements -->
  <div class="absolute top-32 left-16 w-56 h-56 border border-[var(--accent)] opacity-8 rotate-12 shape-rotate" aria-hidden="true"></div>
  <div class="absolute bottom-24 right-20 w-40 h-40 rounded-full bg-[var(--accent)] opacity-5 badge-float" aria-hidden="true"></div>
  <div class="absolute top-1/2 right-1/3 w-24 h-24 bg-[var(--accent)] opacity-5 badge-pulse" aria-hidden="true"></div>

  <div class="max-w-6xl mx-auto relative z-10">
    <header class="text-center mb-16 contact-header">
      <p class="text-sm text-[var(--muted-foreground)] tracking-widest uppercase mb-4">Get in Touch</p>
      <h2 id="contact-heading" class="text-4xl md:text-[52px] font-[var(--font-heading)] text-[var(--foreground)] leading-tight">
        Let's Work Together
      </h2>
      <div class="w-16 h-[2px] bg-[var(--foreground)] mx-auto mt-4 contact-line" aria-hidden="true"></div>
    </header>

    <div class="grid md:grid-cols-2 gap-12">
      <div class="space-y-8 contact-info">
        <div class="space-y-6">
          <p class="text-[var(--muted-foreground)] text-lg leading-relaxed">
            I'm always interested in hearing about new projects and opportunities.
            Whether you have a question or just want to say hi, feel free to reach out!
          </p>

          <nav class="space-y-4 contact-links flex flex-col items-start" aria-label="Contact methods">
            <a
              href={`mailto:${email}`}
              class="flex items-center justify-start gap-4 text-[var(--secondary-foreground)] hover:text-[var(--accent)] transition-colors group shadow-lg hover:shadow-xl bg-[var(--secondary-background)] p-4 w-full"
              aria-label={`Send email to ${email}`}
            >
              <div class="w-12 h-12 border-2 border-[var(--secondary-foreground)] flex items-center justify-center group-hover:bg-[var(--secondary-foreground)] group-hover:border-[var(--secondary-foreground)] transition-all shadow-md" aria-hidden="true">
                <svg class="w-5 h-5 text-[var(--secondary-foreground)] group-hover:text-[var(--secondary-background)]" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
              </div>
              <div>
                <p class="text-sm text-[var(--muted)]">Email</p>
                <p class="text-base font-medium break-all">{email}</p>
              </div>
            </a>

            <a
              href={linkedin}
              target="_blank"
              rel="noopener noreferrer"
              class="flex items-center justify-start gap-4 text-[var(--secondary-foreground)] hover:text-[var(--accent)] transition-colors group shadow-lg hover:shadow-xl bg-[var(--secondary-background)] p-4 w-full"
              aria-label="Connect with me on LinkedIn"
            >
              <div class="w-12 h-12 border-2 border-[var(--secondary-foreground)] flex items-center justify-center group-hover:bg-[var(--secondary-foreground)] group-hover:border-[var(--secondary-foreground)] transition-all shadow-md" aria-hidden="true">
                <svg class="w-5 h-5 text-[var(--secondary-foreground)] group-hover:text-[var(--secondary-background)]" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
                </svg>
              </div>
              <div>
                <p class="text-sm text-[var(--muted)]">LinkedIn</p>
                <p class="text-base font-medium">Connect with me</p>
              </div>
            </a>

            <a
              href={`https://twitter.com/${twitter}`}
              target="_blank"
              rel="noopener noreferrer"
              class="flex items-center justify-start gap-4 text-[var(--secondary-foreground)] hover:text-[var(--accent)] transition-colors group shadow-lg hover:shadow-xl bg-[var(--secondary-background)] p-4 w-full"
              aria-label={`Follow me on Twitter @${twitter}`}
            >
              <div class="w-12 h-12 border-2 border-[var(--secondary-foreground)] flex items-center justify-center group-hover:bg-[var(--secondary-foreground)] group-hover:border-[var(--secondary-foreground)] transition-all shadow-md">
                <svg class="w-5 h-5 text-[var(--secondary-foreground)] group-hover:text-[var(--secondary-background)]" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
                </svg>
              </div>
              <div>
                <p class="text-sm text-[var(--muted)]">Twitter</p>
                <p class="text-base font-medium">@{twitter}</p>
              </div>
            </a>
          </nav>
        </div>
      </div>

      <div class="bg-[var(--secondary-background)] p-8 shadow-2xl contact-form relative">
        <!-- Decorative corner -->
        <div class="absolute -top-4 -right-4 w-24 h-24 border-2 border-[var(--accent)] opacity-20" aria-hidden="true"></div>

        <h3 id="contact-form-heading" class="text-xl font-[var(--font-heading)] text-[var(--secondary-foreground)] mb-6">
          Send Me a Message
        </h3>

        <form class="space-y-6 relative z-10" method="POST" action="https://formspree.io/f/xregyoee" aria-labelledby="contact-form-heading">
          <div>
            <label for="name" class="block text-sm text-[var(--secondary-foreground)] mb-2">
              Name
            </label>
            <input
              type="text"
              id="name"
              name="name"
              required
              class="w-full px-4 py-3 bg-[var(--background)] border-2 border-[var(--border)] text-[var(--foreground)] focus:outline-none focus:border-[var(--foreground)] transition-colors"
              placeholder="Your name"
            />
          </div>

          <div>
            <label for="email" class="block text-sm text-[var(--secondary-foreground)] mb-2">
              Email
            </label>
            <input
              type="email"
              id="email"
              name="email"
              required
              class="w-full px-4 py-3 bg-[var(--background)] border-2 border-[var(--border)] text-[var(--foreground)] focus:outline-none focus:border-[var(--foreground)] transition-colors"
              placeholder="your.email@example.com"
            />
          </div>

          <div>
            <label for="message" class="block text-sm text-[var(--secondary-foreground)] mb-2">
              Message
            </label>
            <textarea
              id="message"
              name="message"
              required
              rows="5"
              class="w-full px-4 py-3 bg-[var(--background)] border-2 border-[var(--border)] text-[var(--foreground)] focus:outline-none focus:border-[var(--foreground)] transition-colors resize-none"
              placeholder="Your message..."
            ></textarea>
          </div>

          <button
            type="submit"
            class="w-full px-8 py-3 bg-[var(--foreground)] text-[var(--background)] font-medium hover:bg-[var(--accent)] hover:scale-105 shadow-lg hover:shadow-2xl transition-all duration-300 relative overflow-hidden group"
          >
            <span class="relative z-10">Send Message</span>
            <div class="absolute inset-0 bg-[var(--accent)] transform translate-y-full group-hover:translate-y-0 transition-transform duration-300"></div>
          </button>
        </form>
      </div>
    </div>
  </div>
</section>

<script>
  import { gsap } from 'gsap';
  import { ScrollTrigger } from 'gsap/ScrollTrigger';

  gsap.registerPlugin(ScrollTrigger);

  // Contact section animations
  const contactTl = gsap.timeline({
    scrollTrigger: {
      trigger: '#contact',
      start: 'top 80%',
      end: 'bottom 20%',
      toggleActions: 'play none none reverse'
    },
    defaults: { ease: 'power3.out' }
  });

  contactTl
    .fromTo('.contact-header',
      { y: 60, opacity: 0 },
      { y: 0, opacity: 1, duration: 0.6 }
    )
    .fromTo('.contact-line',
      { width: 0 },
      { width: '4rem', duration: 0.4 },
      '-=0.3'
    )
    .fromTo('.contact-info',
      { x: -60, opacity: 0 },
      { x: 0, opacity: 1, duration: 0.6 },
      '-=0.2'
    )
    .fromTo('.contact-links a',
      { x: -40, opacity: 0 },
      { x: 0, opacity: 1, duration: 0.4, stagger: 0.1 },
      '-=0.3'
    )
    .fromTo('.contact-form',
      { x: 60, opacity: 0 },
      { x: 0, opacity: 1, duration: 0.6 },
      0.3
    );

  // Blur text parallax
  gsap.to('.contact-blur-text', {
    x: 220,
    scrollTrigger: {
      trigger: '#contact',
      start: 'top bottom',
      end: 'bottom top',
      scrub: 1
    }
  });

  gsap.to('.contact-blur-text-2', {
    x: -220,
    scrollTrigger: {
      trigger: '#contact',
      start: 'top bottom',
      end: 'bottom top',
      scrub: 1
    }
  });
</script>

<style>
  @keyframes badgeFloat {
    0%, 100% {
      transform: translateY(0) rotate(0deg);
    }
    50% {
      transform: translateY(-30px) rotate(10deg);
    }
  }

  @keyframes shapeRotate {
    from {
      transform: rotate(12deg);
    }
    to {
      transform: rotate(372deg);
    }
  }

  @keyframes badgePulse {
    0%, 100% {
      transform: scale(1);
      opacity: 0.05;
    }
    50% {
      transform: scale(1.15);
      opacity: 0.1;
    }
  }

  .badge-float {
    animation: badgeFloat 14s ease-in-out infinite;
  }

  .shape-rotate {
    animation: shapeRotate 40s linear infinite;
  }

  .badge-pulse {
    animation: badgePulse 3s ease-in-out infinite;
  }

  input::placeholder,
  textarea::placeholder {
    color: var(--muted-foreground);
    opacity: 0.6;
  }
</style>
