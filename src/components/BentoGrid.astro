---
import testImage from '../assets/images/testImage.png';
import { Image } from 'astro:assets';
---
<div class="lg:absolute lg:inset-0 lg:left-1/2">
  <Image 
     src={testImage}
    alt
    loading="lazy"
    decoding="async"
    fetchpriority="auto"
    width="1200"
    height="1200"
    class="object-cover w-full h-64 bg-zinc-50 dark:bg-zinc-900 sm:h-80 lg:absolute lg:h-full"
  />
</div>
<div
  class="pt-16 pb-24 sm:pb-32 sm:pt-24 lg:mx-auto lg:grid lg:max-w-7xl lg:grid-cols-2 lg:pt-32"
>
  <div class="px-6 lg:px-8">
    <div class="max-w-xl mx-auto lg:mx-0 lg:max-w-lg">
      <div class="max-w-xl lg:text-balance">
        <h1
          class="text-2xl md:text-3xl lg:text-4xl font-semibold tracking-tight text-zinc-900 dark:text-white lg:text-balance"
        >
          Let’s start a conversation
        </h1>
        <p
          class="text-base mt-4 lg:text-balance text-zinc-500 dark:text-zinc-400"
        >
          Have a question, idea, or feedback? Our team is here to listen and
          help you move forward. Reach out and let’s connect.
        </p>
      </div>
      <form action="#" method="POST" class="max-w-lg mx-auto mt-12">
        <div class="grid grid-cols-1 gap-x-8 gap-y-6 sm:grid-cols-2">
          <div>
            <label
              for="first-name"
              class="text-sm font-medium text-zinc-500 dark:text-zinc-400"
            >
              First name
            </label>
            <div class="mt-1">
              <input
                type="text"
                name="first-name"
                id="first-name"
                autocomplete="given-name"
                required
                aria-required="true"
                aria-describedby="first-name-error"
                placeholder="Your first name"
                class="block w-full h-10 px-4 py-2 text-sm bg-white border border-transparent rounded-lg appearance-none dark:bg-zinc-900 text-zinc-700 dark:text-zinc-300 duration-300 ring-1 ring-zinc-200 dark:ring-zinc-700 placeholder-zinc-400 dark:placeholder-zinc-500 focus:border-zinc-300 dark:focus:border-blue-700 focus:bg-transparent focus:outline-none focus:ring-blue-500 focus:ring-offset-2 focus:ring-2 sm:text-sm"
              />
              <span id="first-name-error" class="hidden text-sm text-red-600">
                Please enter your first name.
              </span>
            </div>
          </div>
          <div>
            <label
              for="last-name"
              class="text-sm font-medium text-zinc-500 dark:text-zinc-400"
            >
              Last name
            </label>
            <div class="mt-1">
              <input
                type="text"
                name="last-name"
                id="last-name"
                autocomplete="family-name"
                required
                aria-required="true"
                aria-describedby="last-name-error"
                placeholder="Your last name"
                class="block w-full h-10 px-4 py-2 text-sm bg-white border border-transparent rounded-lg appearance-none dark:bg-zinc-900 text-zinc-700 dark:text-zinc-300 duration-300 ring-1 ring-zinc-200 dark:ring-zinc-700 placeholder-zinc-400 dark:placeholder-zinc-500 focus:border-zinc-300 dark:focus:border-blue-700 focus:bg-transparent focus:outline-none focus:ring-blue-500 focus:ring-offset-2 focus:ring-2 sm:text-sm"
              />
              <span id="last-name-error" class="hidden text-sm text-red-600">
                Please enter your last name.
              </span>
            </div>
          </div>
          <div class="sm:col-span-2">
            <label
              for="compant"
              class="text-sm font-medium text-zinc-500 dark:text-zinc-400"
            >
              Company name
            </label>
            <div class="mt-1">
              <input
                type="text"
                name="company"
                id="company"
                autocomplete="organization"
                aria-describedby="company-error"
                placeholder="Your company"
                class="block w-full h-10 px-4 py-2 text-sm bg-white border border-transparent rounded-lg appearance-none dark:bg-zinc-900 text-zinc-700 dark:text-zinc-300 duration-300 ring-1 ring-zinc-200 dark:ring-zinc-700 placeholder-zinc-400 dark:placeholder-zinc-500 focus:border-zinc-300 dark:focus:border-blue-700 focus:bg-transparent focus:outline-none focus:ring-blue-500 focus:ring-offset-2 focus:ring-2 sm:text-sm"
              />
              <span id="company-error" class="hidden text-sm text-red-600">
                Please enter your company name.
              </span>
            </div>
          </div>
          <div class="sm:col-span-2">
            <label
              for="phone-number"
              class="text-sm font-medium text-zinc-500 dark:text-zinc-400"
            >
              Phone number
            </label>
            <div class="relative mt-1">
              <div class="absolute inset-y-0 left-0 flex items-center">
                <label for="country" class="sr-only">Country</label>
                <select
                  id="country"
                  name="country"
                  aria-label="Country code"
                  class="h-full py-0 pl-4 bg-transparent border-0 rounded-md pr-9 text-zinc-400 dark:text-zinc-500 focus:ring-2 focus:ring-inset focus:ring-zinc-600 sm:text-sm"
                >
                  <option value="IT">Italy</option>
                  <option value="ES">Spain</option>
                  <option value="JP">Japan</option>
                </select>
              </div>
              <input
                type="tel"
                name="phone-number"
                id="phone-number"
                autocomplete="tel"
                aria-describedby="phone-number-description"
                placeholder="123-456-7890"
                class="block w-full h-10 px-4 py-2 pl-24 text-sm bg-white border border-transparent rounded-lg shadow appearance-none dark:bg-zinc-900 text-zinc-700 dark:text-zinc-300 duration-300 ring-1 ring-zinc-200 dark:ring-zinc-700 placeholder-zinc-400 dark:placeholder-zinc-500 focus:border-zinc-300 dark:focus:border-blue-700 focus:bg-transparent focus:outline-none focus:ring-blue-500 focus:ring-offset-2 focus:ring-2 sm:text-sm"
              />
              <p id="phone-number-description" class="sr-only">
                Enter your phone number including the country code.
              </p>
            </div>
          </div>
        </div>
        <div
          x-data="{
    radioGroupSelectedValue: null,
    radioGroupOptions: [
      {
        title: 'Freelancer',
        description: 'Select this option if you are a freelancer.',
        value: 'freelancer'
      },
      {
        title: 'Company',
        description: 'Select this option if you are working for a company.',
        value: 'company'
      },
    ]
  }"
          class="mt-6 grid grid-cols-1 md:grid-cols-2 gap-2"
          role="radiogroup"
          aria-labelledby="radio-group-label"
        >
          <span id="radio-group-label" class="sr-only"
            >Choose your work status</span
          >
          <template x-for="(option, index) in radioGroupOptions" :key="index">
            <div>
              <input
                type="radio"
                :id="'radio-' + option.value"
                name="radio-group"
                :value="option.value"
                x-model="radioGroupSelectedValue"
                class="sr-only"
                :aria-describedby="'description-' + option.value"
              />
              <label
                :for="'radio-' + option.value"
                class="block shadow cursor-pointer bg-linear-180 outline outline-zinc-100 dark:outline-zinc-800 from-zinc-50 to-zinc-100 dark:from-zinc-800 dark:to-zinc-900 rounded-xl transition-all duration-300 ease-in-out focus-within:ring-zinc-500"
                :class="{ 'ring-zinc-500': radioGroupSelectedValue === option.value }"
              >
                <div
                  class="flex flex-col justify-between h-full text-left rounded-lg"
                  tabindex="-1"
                >
                  <div class="flex items-center p-4 gap-3">
                    <div
                      class="flex items-center justify-center bg-white rounded-full size-4 ring-1 dark:bg-zinc-900"
                      :class="{ 'ring-zinc-500': radioGroupSelectedValue === option.value, 'ring-zinc-300 dark:ring-zinc-700': radioGroupSelectedValue !== option.value }"
                      aria-hidden="true"
                    >
                      <svg
                        xmlns="http://www.w3.org/2000/svg"
                        class="icon icon-tabler icon-tabler-circle-check-filled text-zinc-600 dark:text-zinc-400"
                        width="20"
                        height="20"
                        viewBox="0 0 24 24"
                        stroke-width="2"
                        stroke="currentColor"
                        fill="none"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        x-show="radioGroupSelectedValue === option.value"
                      >
                        <path
                          stroke="none"
                          d="M0 0h24v24H0z"
                          fill="none"
                        ></path>
                        <path
                          d="M17 3.34a10 10 0 1 1 -14.995 8.984l-.005 -.324l.005 -.324a10 10 0 0 1 14.995 -8.336zm-1.293 5.953a1 1 0 0 0 -1.32 -.083l-.094 .083l-3.293 3.292l-1.293 -1.292l-.094 -.083a1 1 0 0 0 -1.403 1.403l.083 .094l2 2l.094 .083a1 1 0 0 0 1.226 0l.094 -.083l4 -4l.083 -.094a1 1 0 0 0 -.083 -1.32z"
                          stroke-width="0"
                          fill="currentColor"
                        ></path>
                      </svg>
                    </div>
                    <span
                      class="text-base font-medium text-zinc-900 dark:text-white"
                      x-text="option.title"
                    >
                    </span>
                  </div>
                  <div
                    class="p-4 border-t border-zinc-200 dark:border-zinc-700"
                  >
                    <span
                      class="text-base text-sm font-medium text-zinc-500 dark:text-zinc-400"
                      x-text="option.description"
                      :id="'description-' + option.value"
                    >
                    </span>
                  </div>
                </div>
              </label>
            </div>
          </template>
        </div>
        <button
          class="relative flex items-center justify-center text-center font-medium transition-colors duration-200 ease-in-out select-none focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:z-10 justify-center rounded-md text-white bg-zinc-900 outline outline-zinc-900 hover:bg-zinc-950 focus-visible:outline-zinc-950 dark:bg-zinc-100 dark:text-zinc-900 dark:outline-zinc-100 dark:hover:bg-zinc-200 dark:focus-visible:outline-zinc-200 h-10 px-5 text-sm w-full mt-8"
        >
          Submit
        </button>
        <div class="flex items-center mt-4">
          <input
            id="agreement"
            name="agreement"
            type="checkbox"
            class="rounded shadow size-4 border-zinc-300 text-zinc-600 focus:ring-zinc-600"
          />
          <label
            for="agreement"
            class="block ml-3 text-sm text-zinc-500 dark:text-zinc-400"
          >
            You agree to our
            <a
              href="#_"
              class="ont-medium text-zinc-900 dark:text-white hover:text-blue-600 dark:hover:text-blue-300"
            >
              Terms of service
            </a>
            and
            <a
              href="#_"
              class="ont-medium text-zinc-900 dark:text-white hover:text-blue-600 dark:hover:text-blue-300"
            >
              Privacy Policy
            </a>
          </label>
        </div>
      </form>
    </div>
  </div>
</div>

